{
  "name": "theatre",
  "private": true,
  "scripts": {
    "boot.mercury": "./support/boot-skill.sh mercury",
    "boot.serve": "./support/boot.sh && yarn serve.heartwood",
    "boot.skill": "./support/boot-skill.sh",
    "boot": "./support/boot.sh",
    "build.heartwood": "./support/build-heartwood.sh",
    "build": "lerna run build.dev",
    "checkout.default": "./support/checkout-default.sh",
    "checkout": "./support/checkout.sh",
    "clean.skills": "lerna run clean.all",
    "clean": "yarn clean.skills && rm -rf node_modules/ package-lock.json npm install.lock .processes",
    "commit.push.skills": "./support/commit-push-skills.sh",
    "delete.skills": "find ./packages -mindepth 1 -maxdepth 1 -type d -exec rm -rf {} +",
    "dump.core.database": "./support/dump-core-db.sh",
    "export.blueprint": "./support/export-blueprint.sh",
    "export.theatre": "./support/export-theatre.sh",
    "fix.lint": "lerna run fix.lint",
    "import.blueprint": "./support/import-blueprint.sh",
    "import.theatre": "./support/import-theatre.sh",
    "is.skill.running": "./support/is-skill-running.sh",
    "list.running": "./support/pm2.sh save && ./support/pm2.sh list",
    "login.skills": "./support/login-skills.sh",
    "login": "./support/login.sh",
    "logs": "./support/logs.sh",
    "monitor": "./support/pm2.sh monit",
    "publish.skills": "./support/publish-skills.sh",
    "pull.latest.from": "./support/pull-latest-from.sh",
    "push.latest.to": "./support/push-latest-to.sh",
    "push.to": "./support/push-to.sh",
    "reboot.skill": "./support/reboot-skill.sh",
    "reboot": "yarn shutdown && yarn boot",
    "rebuild": "yarn clean && yarn && lerna run clean.build && lerna run build.dev",
    "register.skills": "./support/register-skills.sh",
    "repair": "lerna repair",
    "reset.core.database": "./support/reset-core-db.sh",
    "reset": "yarn clean && yarn delete.skills",
    "serve.heartwood": "./support/serve-heartwood.sh",
    "shutdown.skill": "./support/shutdown-skill.sh",
    "shutdown": "./support/shutdown.sh",
    "stop.serving.heartwood": "./support/stop-serving-heartwood.sh",
    "sync-skills-from-blueprint": "./support/sync-skills-with-blueprint.sh",
    "sync": "rm package-lock.json || node ./support/sync.js",
    "test": "lerna run test",
    "update.skill": "./support/update-skill.sh",
    "update": "./support/update.sh",
    "upgrade.skill": "./support/upgrade-skill.sh",
    "upgrade": "./support/upgrade.sh"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "js-yaml": "^4.1.0",
    "lerna": "^8.1.2"
  },
  "resolutions": {
    "date-fns": ">=3.6.0"
  },
  "dependencies": {
    "pm2": "^5.3.1"
  }
}